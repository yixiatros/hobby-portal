<%= stylesheet_link_tag :login %>

<div class="brand"><%= link_to 'ThreadVerse', root_path  ,class: "navbar-brand"%><b>TM</b></div>

<div id="change-password-box">
  <div>
    <h1>Reset Password</h1>
    <%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <%= form.password_field :password, placeholder: "Password", class: "form-control" %>
      <%= form.password_field :password_conformation, placeholder: "Retype password", class: "form-control" %>
      <%= form.submit 'Update Password', class: "login-button signup-button password-button" %>
    <% end %>
  </div>
</div>