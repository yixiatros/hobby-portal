<%= javascript_include_tag "contacts.js" %>

<div class="contact-container">
  <div class="collapse-uncollapse"><a id="collapse-uncollapse" onclick="collapse()">â–¼</a></div>
  <div id="contacts-info" style="display: block;">
    <ul id="contact-list" class="contact-list">
      <div>Contact</div>
      <% Current.user.followers.each do |contact| %>
        <li>
          <%= render contact %>
        </li>
      <% end %>
      <div class="group-chat-list">Groups</div>
      <% Room.get_all_groups_of_user(Current.user).each do |r| %>
        <li class="group-chat-list-item">
          <%= link_to r.name, r, class: "group-chat-list-item-btn btn"%>
        </li>
      <% end %>
    </ul>
    <div class="add-contact"><%= link_to "Add Contact", contacts_path, class: "add-contacts-link" %></div>
    <div>
      <input class="search-contact" type="text" oninput="this.setAttribute('value',this.value)" placeholder="Search for a contact...">
    </div>
  </div>
  <div id="Contacts">Contacts</div>
</div>